  gem "rails", "~> 4.0.13"
  gem 'actionpack-action_caching'
  gem 'actionpack-page_caching'
end

appraise "rails4.1" do
  gem "rails", "~> 4.1.0"
  gem 'actionpack-action_caching'
  gem 'actionpack-page_caching'
end
